<!--
    DetailsFlow

    A simple layout that attempts to mimic common video stream service UI (Netflix, etc...). Used to trigger the
    test content stream (via the Play button).
-->
<component
    name="DetailsFlow"
    extends="BaseFlow">

    <script type="text/brightscript" uri="pkg:/components/DetailsFlow.brs"/>

    <children>
        <Group
            id="baseFlowLayout"
            visible="false"
            focusable="true">

            <Poster
                id="backgroundImage"
                uri="pkg:/images/details_flow_bg_fhd.png"
                width="1280"
                height="720"/>

            <Poster
                id="backgroundImage2"
                uri="pkg:/images/details_bg_top_overlay_fhd.png"
                width="1280"
                height="564"/>

            <Rectangle
                id="backgroundImage3"
                color="0x202527FF"
                translation="[0,564]"
                width="1280"
                height="156"/>

            <Poster
                id="trueVisionLogo"
                width="189"
                height="41"
                translation="[39,31]"
                uri="pkg:/images/true-vision-logo_fhd.png"/>

            <LayoutGroup
                id="detailsFlowLayout"
                translation="[112,127]"
                layoutDirection="vert"
                horizAlignment="left"
                itemSpacings="[18,28,52]">

                <Label
                    id="detailsFlowTitle"
                    text="Day in the Life of a Product Manager"
                    color="0xFFFFFFFF"
                    numLines="1">

                    <Font
                        id="detailsFlowTitleFont"
                        role="font"
                        uri="pkg:/fonts/SF-Pro-Display-Heavy.otf"
                        size="42"/>

                </Label>

                <Label
                    id="detailsFlowDescription"
                    width="783"
                    wrap="true"
                    numLines="2"
                    color="0xFFFFFFFF"
                    text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut dictum, diam sed gravida tincidunt, libero lectus maximus elit, eget scelerisque ex orci a massa. Nullam ut mi ut lectus molestie porta.">

                    <Font
                        id="detailsFlowDescriptionFont"
                        role="font"
                        uri="pkg:/fonts/SF-Pro-Display-Regular.otf"
                        size="19"/>

                </Label>

                <Button
                    id="playButton"
                    minWidth="236"
                    maxWidth="236"
                    showFocusFootprint="true"
                    focusFootprintBitmapUri="pkg:/images/play_button_fhd.png"
                    focusBitmapUri="pkg:/images/play_button_fhd.png"
                    focusable="true"
                    textColor="0x000000FF">

                    <Font
                        id="detailsFlowButtonFont"
                        role="textFont"
                        uri="pkg:/fonts/SF-Pro-Display-Heavy.otf"
                        size="21"/>

                </Button>

                <LayoutGroup
                    id="episodeList"
                    layoutDirection="horiz"
                    itemSpacings="[83,42,42,42,42,42,42,42,42,42,42]">

                    <Poster
                        id="episode1"
                        width="201"
                        height="302"/>

                    <Rectangle
                        id="episode2"
                        width="123"
                        height="185"
                        color="0x6B6B6BFF"/>

                    <Rectangle
                        id="episode3"
                        width="123"
                        height="185"
                        color="0x6B6B6BFF"/>

                    <Rectangle
                        id="episode4"
                        width="123"
                        height="185"
                        color="0x6B6B6BFF"/>

                    <Rectangle
                        id="episode5"
                        width="123"
                        height="185"
                        color="0x6B6B6BFF"/>

                    <Rectangle
                        id="episode6"
                        width="123"
                        height="185"
                        color="0x6B6B6BFF"/>

                    <Rectangle
                        id="episode7"
                        width="123"
                        height="185"
                        color="0x6B6B6BFF"/>

                </LayoutGroup>
            </LayoutGroup>
        </Group>
    </children>
</component>
